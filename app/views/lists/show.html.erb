<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to 'Remove', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "T'es sur de vouloir supprimer?"} %>
    </li>
  <% end %>
</ul>
<h2>Add a Movie</h2>


<div class="container">
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.input :movie_id, collection: Movie.all %>
    <%= f.submit %>
  <% end %>
</div>
